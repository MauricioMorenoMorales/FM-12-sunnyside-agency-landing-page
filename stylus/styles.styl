@import './_reset-styles.styl'
@import './_tokens.styl'

html
	font-family ffPrimary

.header
	background-image url('../images/mobile/image-header.jpg')
	background-repeat no-repeat
	background-size 100% 100%
	padding 20px
	&__navbar
		display flex
		justify-content space-between
		align-items center
		&__links
			position absolute
			display none
			flex-direction column
			align-items center
			border-radius 5px
			right 0
			left 0
			top 100px
			margin 0 auto
			width 80vw
			max-width 400px
			padding 20px
			background-color white
			&__item
				margin 10px
				color grayishBlue
				text-decoration none
				&.contact
					font-family ffSecondary
					color veryDarkDesaturatedBlue
					background-color yellow
					padding 15px 30px
					border-radius 30px
			&.active
				display flex
		&__logo
			width 150px
			height 30px
	&__hero
		text-align center
		margin 80px auto
		&__title
			font-family ffSecondary
			font-weight fwExtraBold
			font-size 3.4rem
			text-transform uppercase
			letter-spacing 8px
			color white

